<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

	<grid name="company-grid" title="Companies" model="com.axelor.gst.db.Company"> 
	  
	  <field name="name" /> 
	  <field name="gstin"/>
	  <field name="bankaccount"/>
	  <field name="address"/>
	  
	</grid>
	
	<form name="company-form" title="Company" model="com.axelor.gst.db.Company">
	
		<panel name="mainPanel" title="Main Panel">
		
			<field name="name"/>
			<field name="logo" widget="image"/>
			<field name="contactList">
				<viewer> <![CDATA[
					<contact>
						{{record.name}} <br> 
						{{record.typeSelect}} <br>
						{{record.primaryEmail}} <br> 
						{{record.secondaryEmail}} <br>
						{{record.primaryPhone}} <br>
						{{record.secondaryPhone}}
					</contact>
				]]></viewer>
				<editor x-show-titles="false">
					<field name="name"/>
					<field name="typeSelect"/>
					<field name="primaryEmail"/>
					<field name="secondaryEmail"/>
					<field name="primaryPhone"/>
					<field name="secondaryPhone"/>
				</editor>
			</field>
			<field name="gstin"/>
			<field name="bankaccount"/>
	 		<field name="address"/>
			
		</panel>
		
	</form>
	
	
</object-views>