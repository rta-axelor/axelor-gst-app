<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

  	<grid model="com.axelor.gst.db.Product" title="Products" name="product-grid">
  		<toolbar>
  			<button onClick="act1" name="btnNewInvoice" title="Create Invoice!" icon="fa-print"/>
  			<button onClick="act2" name="btnInvoiceReport" title="Print Report" icon="fa-print"/>
  		</toolbar>
  		<menubar>
  			<menu title="Buttons">
  				<item action="act1" title="Create Invoice"/>
  				<item action="act2" title="Print Report"/>
  			</menu>
  		</menubar>
  		<field name="name"/>
  		<field name="category"/>
  		<field name="salePrice"/>
  		<field name="gstRate"/>
  	</grid>
  	
  	<form model="com.axelor.gst.db.Product" title="Product" name="product-form">
  		<panel>
  			<field name="name"/>
  		<field name="code"/>
  		<field name="hsbn"/>
  		<field name="category" onChange="action-product-record-onchange"/>
  		<field name="salePrice"/>
  		<field name="costPrice"/>
  		<field name="image"/>
  		<field name="gstRate"/>
  		</panel>
  	</form>
  	
  	<cards name="product-cards" model="com.axelor.gst.db.Product" title="Products">
  		<field name="name"/>
  		<field name="code"/>
  		<field name="hsbn"/>
  		<field name="category"/>
  		<field name="salePrice"/>
  		<field name="costPrice"/>
  		<field name="gstRate"/>
  		<field name="image"/>
  		<template>
  			<![CDATA[
  				<div class="span4 card-image">
  					<img ng-src="{{$image(null, 'image')}}">
  				</div>
  				<div class="span4">
					<strong>{{name}}</strong><br/>
					<strong>{{code}}</strong><br/>
					<strong>{{hsbn}}</strong><br/>
					<strong>{{category.name}}</strong><br/>
					<strong>{{salePrice}}</strong><br/>
					<strong>{{costPrice}}</strong><br/>
					<strong>{{gstRate}}</strong>
					
				</div>
  			]]>
  		</template>
  	</cards>
  	
  	<action-record name="action-product-record-onchange" model="com.axelor.gst.db.Product">
  		<field name="gstRate" expr="eval: category.gstRate "/>
  	</action-record>
  
</object-views>