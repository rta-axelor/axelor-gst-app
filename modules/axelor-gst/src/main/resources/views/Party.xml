<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">


	<grid model="com.axelor.gst.db.Party" title="Parties" name="party-grid">
		
		<field name="name"/>
		<field name="customer"/>
		<field name="supplier"/>
		<field name="gstin"/>
		
	</grid>
	
	<form model="com.axelor.gst.db.Party" title="Party" name="party-form" onNew="action-party-record-onnew" >
	
		<panel>
		
			<field name="name"/>
			<field name="typeSelect"/>
			<field name="customer"/>
			<field name="supplier"/>
			<field name="gstin"/>
			<field name="contactList">
				<viewer> <![CDATA[
					<contact>
						{{record.name}} <br> 
						{{record.typeSelect}} <br>
						{{record.primaryEmail}} <br> 
						{{record.secondaryEmail}} <br>
						{{record.primaryPhone}} <br>
						{{record.secondaryPhone}}
					</contact>
				]]></viewer>
				<editor x-show-titles="false">
					<field name="name"/>
					<field name="typeSelect"/>
					<field name="primaryEmail"/>
					<field name="secondaryEmail"/>
					<field name="primaryPhone"/>
					<field name="secondaryPhone"/>
				</editor>
			</field>
			<field name="addressList">
			<viewer> <![CDATA[
					<address>
						{{record.typeSelect}} <br> 
						{{record.line1}} <br>
						{{record.line2}} <br> 
						{{record.city.name}} <br>
						{{record.state.name}} <br>
						{{record.country.name}}<br>
						{{record.pincode}}
					</address>
				]]></viewer>
				<editor x-show-titles="false">
					<field name="typeSelect"/>
					<field name="line1"/>
					<field name="line2"/>
					<field name="city"/>
					<field name="state"/>
					<field name="country"/>
					<field name="pincode"/>
				</editor>
			</field>
			
		</panel>
	</form>
	<cards name="party-cards" model="com.axelor.gst.db.Party" title="Party">
		<field name="name"/>
		<field name="customer"/>
		<field name="supplier"/>
		<field name="gstin"/>
		<template>
			<![CDATA[
				<div class="span4 card-image">
					<strong>{{name}}</strong>
					<strong>{{customer}}</strong>
					<strong>{{supplier}}</strong>
					<strong>{{gstin}}</strong>
				</div>
			]]>
		</template>
	</cards>
	<action-record name="action-party-record-onnew" model="com.axelor.gst.db.Party">
		<field name="typeSelect" expr="company"/>
	</action-record>
	

  </object-views>
  